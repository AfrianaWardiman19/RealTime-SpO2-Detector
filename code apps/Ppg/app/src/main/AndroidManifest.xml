<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- ðŸ”¹ Izin untuk Bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" /> <!-- ðŸ”¹ Izin Lokasi (Diperlukan untuk Bluetooth di Android <12) -->
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:maxSdkVersion="30" /> <!-- ðŸ”¹ Izin Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- ðŸ”¹ Menyatakan bahwa aplikasi memerlukan fitur Bluetooth -->
    <!-- âœ… menyimpan file CSV -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Monitoring_Ppg"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PpgEkg"
        tools:targetApi="31">

        <!-- ðŸ”¹ MainActivity (Halaman Login) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- ðŸ”¹ RegisterActivity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" /> <!-- ðŸ”¹ MenuActivity -->
        <activity
            android:name=".MenuActivity"
            android:exported="false" /> <!-- ðŸ”¹ PpgActivity -->
        <activity
            android:name=".PpgActivity"
            android:exported="false" />
        <activity
            android:name=".RekamanppgActivity"
            android:exported="false" />
    </application>

</manifest>